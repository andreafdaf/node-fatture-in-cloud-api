{
  "name": "fatture-in-cloud-api",
  "version": "0.0.3",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "npm run tsc && mocha",
    "lint-fix": "tslint --fix ./src/index.ts",
    "lint": "tslint ./src/",
    "tsc": "rm -r ./build/* && tsc"
  },
  "author": "Andrea Fernandes da Fonseca <me@adf.ninja> (http://adf.ninja)",
  "repository": "github:andreafdaf/node-fatture-in-cloud-api",
  "license": "MIT",
  "dependencies": {
    "request": "^2.88.0",
    "request-promise-native": "^1.0.5",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/node": "^13.13.4",
    "@types/request-promise-native": "^1.0.17",
    "@types/uuid": "^7.0.3",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "tslint": "^6.1.2",
    "typescript": "^3.8.3"
  },
  "eslintConfig": {
    "extends": [
      "standard"
    ],
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "env": {
      "node": true,
      "mocha": true
    },
    "rules": {
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "standard/object-curly-even-spacing": [
